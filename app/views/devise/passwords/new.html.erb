<section class="mt-5 py-3" >
  <div class="container">
    <div class="row">
      <div class="col-12 offset-md-3 col-md-6 offset-lg-4 col-lg-4">
        <h1 class="h1-responsive main-font font-weight-bold text-center">
          <%= t('.forgot_your_password') %>
        </h1>

        <div class="card black text-white py-2">
          <div class="card-body">
            <div class="text-center mb-4">
              <!-- logo -->
              <%= link_to root_path, class: 'main-font' do %>
                GWTorre
              <% end %>
            </div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'no-margin') do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control dark-input', placeholder: 'Email' %>
              </div>

              <div class="row mt-3">
                <div class="col-12 col-md-12">
                  <span class="waves-input-wrapper waves-effect waves-light" style=" display: block; ">
                    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-yellow btn-rounded' %>  
                  </span>                    
                </div>
              </div>
            <% end %>

            <div class="row mt-3">
              <div class="col-12 text-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
